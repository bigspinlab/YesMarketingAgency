---
import Headline from "./shared/Headline.astro";
import Step from "./shared/Step.astro";
---

<section class="jumbotron background-soft-white-medium">
  <article class="jumbotron-article">
    <Headline
      className="jumbotron-headline"
      isHeadlineWhite={false}
      borderColor="turquoiseBorder"
    >
      Como o <span>retalhista</span> processa a troca?
    </Headline>
    <div class="jumbotron-content">
      <div class="jumbotron-step">
        <Step
          isStepCenteredWithText
          isTextWhite={false}
          isStepGreen
          stepNumber="1"
        >
          Fa√ßa login na Retail App
        </Step>
      </div>
      <div class="jumbotron-link">
        <p class="jumbotron-link-text text-align-center color-slate-original">
          https://retalho.faturaiqos.pt
        </p>
      </div>
      <div class="jumbotron-step">
        <Step
          isStepCenteredWithText
          isTextWhite={false}
          isStepGreen
          stepNumber="2"
        >
          Selecione <strong>Pedidos de Troca</strong>
        </Step>
      </div>
    </div>

    <img class="jumbotron-image" src="../imgs/step-two.png" alt="second step" />
  </article>
</section>

<style>
  .jumbotron {
    width: 100%;
  }

  .jumbotron-headline {
    max-width: 33rem;
    margin: 0 auto;
  }

  .jumbotron-article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 12rem 0;
  }

  .jumbotron-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 31.2rem;
    margin: 0 auto;
  }

  .jumbotron-step {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 11rem;
    margin-bottom: 2rem;
    gap: 1rem;
  }

  .jumbotron-link {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .jumbotron-link-text {
    font-size: 1.5rem;
    line-height: 2rem;
    padding: 1.4rem 3rem;
    background-color: var(--soft-white-dark);
    border-radius: 2rem;
  }

  .jumbotron-image {
    display: block;
    min-height: 16rem;
    margin-top: 3rem;
    object-fit: cover;
  }

  @media screen and (min-width: 48em) {
    .jumbotron-headline {
      max-width: 70rem;
    }
    .jumbotron-article {
      padding: 19rem 0;
      max-width: 70rem;
      margin: 0 auto;
    }

    .jumbotron-content {
      max-width: 55rem;
    }

    .jumbotron-link {
      margin-bottom: 10rem;
    }

    .jumbotron-link-text {
      font-size: 3.6rem;
      line-height: 4.8rem;
    }

    .jumbotron-image {
      max-height: 38rem;
      margin-top: 6rem;
    }
  }
</style>
